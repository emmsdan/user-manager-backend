{
  "name": "user-manager-backend",
  "version": "1.0.0",
  "description": "user authorization and information management app",
  "main": "build/init.js",
  "repository": "https://github.com/emmsdan/user-manager-backend.git",
  "author": "EmmsDan <ecomje@gmail.com>)",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build-nobuild": "'rm -rf ./build/ && tsc'",
    "docker": "docker build --tag=user-manager-backend .",
    "lint": "tslint --project \"tsconfig.json\"",
    "start": "npm run start-dev",
    "start-dev": "nodemon --config \"./util/nodemon.json\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "ts-node src/setup-database.ts && jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@overnightjs/core": "^1.6.9",
    "@overnightjs/logger": "^1.1.9",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@types/nodemailer": "^6.2.1",
    "@types/nunjucks": "^3.1.1",
    "@types/supertest": "^2.0.8",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "http-status-codes": "^1.3.2",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "nodemailer": "^6.3.0",
    "nodemon": "^1.19.1",
    "nunjucks": "^3.2.0",
    "pg": "^7.12.0",
    "prettier": "^1.18.2",
    "reflect-metadata": "^0.1.13",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.18.0",
    "typeorm": "^0.2.18",
    "typescript": "^3.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
