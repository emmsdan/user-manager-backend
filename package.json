{
  "name": "user-manager-backend",
  "version": "1.0.0",
  "description": "user authorization and information management app",
  "main": "build/init.js",
  "repository": "https://github.com/emmsdan/user-manager-backend.git",
  "author": "EmmsDan <ecomje@gmail.com>)",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rm -rf ./build/ && tsc",
    "lint": "tslint --project \"tsconfig.json\"",
    "start": "node build/init.js",
    "start-dev": "nodemon --config \"./util/nodemon.json\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@overnightjs/core": "^1.6.9",
    "@overnightjs/logger": "^1.1.9",
    "body-parser": "^1.19.0",
    "cross-env": "^5.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.3.2",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@types/supertest": "^2.0.8",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
